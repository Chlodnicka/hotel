<h1>Properties</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th colspan="2"></th>
  </tr>
  </thead>
  <tbody>
  <% @room_properties.each do |property| %>
      <tr>
        <td><%= property.name %></td>
        <td><%= link_to 'Edit', edit_room_property_path(property) %></td>
        <td><%= link_to 'Destroy', property, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'New room property', new_room_property_path %>
<br>
