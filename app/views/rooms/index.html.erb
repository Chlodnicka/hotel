<p id="notice"><%= notice %></p>

<h1>Rooms</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Count of person</th>
      <th>Price</th>
      <th>Bathroom</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.name %></td>
        <td><%= room.count_of_person %></td>
        <td><%= room.price %></td>
        <% if room.bathroom == 1 %>
          <td><%= room.bathroom %></td>
        <% end%>
        <% if room.bathroom == 2 %>
           <td><%= room.bathroom %></td>
        <% end%>
        <td><%= room.description %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

